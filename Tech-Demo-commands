node "client" {
  policy = "write"
}

service_prefix "" {
  policy = "read"
}

consul acl policy create -name working-policy -rules @working-policy.hcl
consul acl token create -policy-name working-policy
consul acl set-agent-token agent <>

node "client" {
  policy = "read"
}

service_prefix "" {
  policy = "read"
}

consul acl policy update -id b308a9ec-41ad-ec7f-8f76-2e30a7ec914d \
-rules @working-policy.hcl